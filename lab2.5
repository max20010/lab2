#include "pch.h"
#include <iostream>
using namespace std;

int main()
{
	double x1, x2, y1, y2, x3, y3, a, b, c, ab, bc, ca, p, s;
	cin >> x1;
	cin >> y1;
	cin >> x2;
	cin >> y2;
	cin >> x3;
	cin >> y3;
	if (x1 > x2) {
		a = x1 - x2;
	}
	else
	{
		a = x2 - x1;
	}	if (y1 > y2) {
		b = y1 - y2;
	}
	else
	{
		b = y2 - y1;
	}
	ab = a * a + b * b;
	ab = sqrt(ab);
	//
	if (x2 > x3) {
		c = x2 - x3;
	}
	else
	{
		c = x3 - x2;
	}	if (y2 > y3) {
		b = y2 - y3;
	}
	else
	{
		b = y3 - y2;
	}
	bc = c * c + b * b;
	bc = sqrt(bc);
	//
	if (x3 > x1) {
		a = x3 - x1;
	}
	else
	{
		a = x1 - x3;
	}	if (y3 > y1) {
		c = y1 - y3;
	}
	else
	{
		c = y1 - y3;
	}
	ca = a * a + c * c;
	ca = sqrt(ca);
	cout << ab + bc + ca << endl;
	p = (ab + bc + ca) / 2;
	s = sqrt(p*(p-ab)*(p-bc)*(p-ca));
	cout << s << endl;
}
